    <CollectionView ItemsSource="{Binding Items}">
        <CollectionView.Header>
            <Grid ColumnDefinitions="*, Auto"
                  RowDefinitions="*">
                <Label Text="Header item test"
                       Grid.Column="0"
                       Grid.Row="0" />
                <Label BackgroundColor="Red"
                       Grid.Column="1"
                       Grid.Row="0"
                       Text="Header item test 2 right"
                       WidthRequest="50"
                       HeightRequest="50" />
            </Grid>
        </CollectionView.Header>
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid ColumnDefinitions="*, Auto"
                      RowDefinitions="*">
                    <Label Text="{Binding .}"
                           Grid.Column="0"
                           Grid.Row="0" />
                    <Label BackgroundColor="Red"
                           Grid.Column="1"
                           Grid.Row="0"
                           Text="Right item"
                           WidthRequest="50"
                           HeightRequest="50" />
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>